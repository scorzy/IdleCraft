{
  "name": "idle-craft",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "analyze": "tsc && vite build -c vite.config.analyze.ts && start dist\\stats.html",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0 && prettier --write .",
    "test": "vitest -w",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fontsource-variable/roboto-mono": "^5.0.8",
    "clsx": "^1.2.1",
    "inter-ui": "^3.19.3",
    "normalize.css": "^8.0.1",
    "postcss-preset-env": "^9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-fast-compare": "^3.2.2",
    "react-icons": "^4.10.1",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/coverage-v8": "^0.34.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "prettier": "3.0.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vitest": "^0.33.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "jsxSingleQuote": false,
    "tabWidth": 4,
    "useTabs": false,
    "endOfLine": "auto",
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
